<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7C88CD"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardV1"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="#7AA559"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/weightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight"
                android:fontFamily="@font/poppins"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/weightNumber"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@id/weightTV"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:hint="0"
                android:textColorHint="@color/white"
                android:backgroundTint="@android:color/transparent"
                android:inputType="number"
                app:layout_constraintTop_toBottomOf="@id/weightTV"
                app:layout_constraintStart_toStartOf="@id/weightTV"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textSize="25sp"
                android:fontFamily="@font/poppins"
                app:layout_constraintStart_toEndOf="@id/weightNumber"
                app:layout_constraintTop_toTopOf="@id/weightNumber"
                app:layout_constraintBottom_toBottomOf="@id/weightNumber"
                android:layout_marginStart="30dp"
                android:textColor="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="#7AA559"
        app:layout_constraintTop_toBottomOf="@id/cardV1"
        app:layout_constraintStart_toStartOf="@id/cardV1"
        app:layout_constraintEnd_toEndOf="@id/cardV1"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginTop="50dp"
        android:id="@+id/cardV2"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/heightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height"
                android:fontFamily="@font/poppins"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"
                android:textColor="@color/white"
                />
            <EditText
                android:id="@+id/heightNumber"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:backgroundTint="@android:color/transparent"
                android:inputType="number"
                android:hint="0"
                android:textColorHint="@color/white"
                app:layout_constraintEnd_toEndOf="@id/heightTV"
                app:layout_constraintTop_toBottomOf="@id/heightTV"
                app:layout_constraintStart_toStartOf="@id/heightTV"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textSize="25sp"
                android:fontFamily="@font/poppins"
                app:layout_constraintStart_toEndOf="@id/heightNumber"
                app:layout_constraintTop_toTopOf="@id/heightNumber"
                app:layout_constraintBottom_toBottomOf="@id/heightNumber"
                android:layout_marginStart="30dp"
                android:textColor="@color/white"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/calBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Calculate"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="@id/cardV2"
        app:layout_constraintStart_toStartOf="@id/cardV2"
        app:layout_constraintTop_toBottomOf="@id/cardV2"
        app:strokeWidth="3dp"
        app:strokeColor="@color/white"/>


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="#7AA559"
        app:layout_constraintTop_toBottomOf="@id/calBtn"
        app:layout_constraintStart_toStartOf="@id/calBtn"
        app:layout_constraintEnd_toEndOf="@id/calBtn"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/cardV3"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TextView
                android:id="@+id/countNumTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/countText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count text"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@id/countNumTV"
                app:layout_constraintStart_toStartOf="@id/countNumTV"
                app:layout_constraintEnd_toEndOf="@id/countNumTV"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/countRangeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Count range"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                app:layout_constraintTop_toBottomOf="@id/countText"
                app:layout_constraintStart_toStartOf="@id/countText"
                app:layout_constraintEnd_toEndOf="@id/countText"
                android:layout_marginTop="15dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
